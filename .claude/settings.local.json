{
  "env": {
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "60",
    "MAX_THINKING_TOKENS": "10000"
  },
  "permissions": {
    "allow": [
      "Bash(npm install:*)",
      "Bash(npx tsc:*)",
      "Bash(git remote add:*)",
      "Bash(git add:*)",
      "Bash(dir:*)",
      "Bash(test:*)",
      "Bash(npm start)",
      "Bash(npm run android:*)",
      "Bash(./gradlew assembleDebug:*)",
      "Bash(npm search:*)",
      "Bash(./gradlew clean:*)",
      "Bash(adb devices:*)",
      "Bash(adb:*)",
      "Bash(node --version:*)",
      "Bash(find:*)",
      "Bash(npx @react-native-community/cli@latest init:*)",
      "Bash(npx react-native@latest init MedTracker --skip-install)",
      "Bash(npx tailwindcss init:*)",
      "Bash(tree:*)",
      "Bash(netstat:*)",
      "Bash(findstr:*)",
      "Read(//c/Users/fuats/Desktop/Workdir/MedTracker/**)",
      "Bash(xargs:*)",
      "Bash(./gradlew:*)",
      "Bash(./gradlew.bat app:installDebug:*)",
      "WebFetch(domain:www.nativewind.dev)",
      "Bash(npm start -- --reset-cache)",
      "Bash(taskkill:*)",
      "Bash(powershell \"Get-Process node -ErrorAction SilentlyContinue | Stop-Process -Force\")",
      "Bash(npm start:*)",
      "Bash(npx react-native run-android:*)",
      "Bash(npx react-native:*)",
      "Bash(for lang in id sr tr)",
      "Bash(do cp en/pages.json \"$lang/pages.json\")",
      "Bash(done)",
      "Bash(npx react-native-asset:*)",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Skill(claude-md-management:revise-claude-md)",
      "Skill(claude-md-management:revise-claude-md:*)",
      "Bash(git commit:*)",
      "Bash(powershell -Command:*)",
      "Bash(powershell.exe -Command:*)",
      "Bash(powershell.exe -ExecutionPolicy Bypass -File /tmp/write_files.ps1)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(npx jest:*)",
      "Bash(node -e:*)",
      "Bash(wc:*)",
      "Bash(python -c:*)",
      "Bash(npm test:*)",
      "Bash(npx eslint:*)",
      "Bash(pod install)",
      "Bash(git -C /c/Users/fuats/Desktop/Workdir/MedTracker log --oneline -20)",
      "Bash(python3:*)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"if ($env:CLAUDE_FILE_PATHS -match '\\.tsx?$') { npx tsc --noEmit --skipLibCheck 2>&1 | Select-Object -First 20 }\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"if ($env:CLAUDE_FILE_PATHS -match 'bp-guidelines|classification|BPCategory') { Write-Host 'âš ï¸ MEDICAL SAFETY: Classification file modified â€” verify thresholds against docs/bp-classification-guidelines.md' }\"",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"if ($env:CLAUDE_FILE_PATHS -match 'shared/config/bp-guidelines\\.ts|shared/config/medical') { Write-Error '{\\\"decision\\\": \\\"block\\\", \\\"reason\\\": \\\"ðŸš¨ Protected medical constants file. Request explicit permission to proceed.\\\"}'; exit 2 }\"",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -Command \"npx tsc --noEmit --skipLibCheck 2>&1 | Select-Object -Last 5\"",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "if echo \"$CLAUDE_TOOL_INPUT\" | grep -q 'bp-guidelines'; then echo '{\"decision\": \"block\", \"reason\": \"ðŸš¨ Cannot modify medical constants via Bash\"}' >&2; exit 2; fi",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "powershell.exe -Command \"[System.Reflection.Assembly]::LoadWithPartialName('System.Windows.Forms'); [System.Windows.Forms.MessageBox]::Show('Claude Code needs attention', 'MedTracker')\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
